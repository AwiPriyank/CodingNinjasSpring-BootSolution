<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- Savings Account Bean -->
    <bean id="savingsAccount" class="com.codingNinjas.Bank.Account.Registration.savingsAccount" />
    
    
    <!-- User Bean -->
    <bean id="myUser" class="com.codingNinjas.Bank.Account.Registration.myUser" scope="singleton"/>

    <!-- Current Account Bean -->
    <bean id="currentAccount" class="com.codingNinjas.Bank.Account.Registration.currentAccount" />
    <constructor-arg ref="currentAccountDouble"/>

    

</beans>
